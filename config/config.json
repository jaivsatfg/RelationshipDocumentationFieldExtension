{
  "$schema": "https://developer.microsoft.com/json-schemas/spfx-build/config.2.0.schema.json",
  "version": "2.0",
  "bundles": {
    "related-document-field-extension-field-customizer": {
      "components": [
        {
          "entrypoint": "./lib/extensions/relatedDocumentFieldExtension/RelatedDocumentFieldExtensionFieldCustomizer.js",
          "manifest": "./src/extensions/relatedDocumentFieldExtension/RelatedDocumentFieldExtensionFieldCustomizer.manifest.json"
        }
      ]
    }
  },
  "externals": {
    "jquery": {
      "path": "node_modules/jquery/dist/jquery.min.js",
      "globalName": "jQuery"
    },
    "gijgo": {
      "path": "node_modules/gijgo/js/gijgo.min.js",
      "globalName": "gijgo",
      "globalDependencies": ["jquery"]
    }    
  },
  "localizedResources": {
    "RelatedDocumentFieldExtensionFieldCustomizerStrings": "lib/extensions/relatedDocumentFieldExtension/loc/{locale}.js"
  }
}
